{
    "name": "drupal-composer/project-template",
    "description": "Drupal 8 Project template",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/admin_toolbar": "^1.18",
        "drupal/coder": "8.2.*",
        "drupal/console": "~1.0",
        "drupal/core": "~8.0",
        "drupal/phingdrushtask": "^7.1",
        "drush/drush": "~8.0",
        "fxp/composer-asset-plugin": "^1.4",
        "phing/phing": "2.*",
        "psr/log": "dev-master",
        "squizlabs/php_codesniffer": "2.*",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "secure-http": false,
        "fxp-asset": {
            "enabled": true,
            "installer-paths": {
                "bower-asset-library": "libraries",
                "npm-asset-library": "libraries"
            },
            "vcs-driver-options": {
                "github-no-api": true
            }
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "core": ["type:drupal-core"],
            "libraries/{$name}": ["type:drupal-library"],
            "modules/contrib/{$name}": ["type:drupal-module"],
            "profiles/contrib/{$name}": ["type:drupal-profile"],
            "themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "modules/custom/{$name}": ["type:drupal-custom-module"],
            "profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "merge-plugin": {
            "include": [
                "modules/custom/*/composer.json",
                "themes/custom/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        },
    "enable-patching": true,
    "patches-file": "composer.patches.json"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/phingdrushtask",
                "version": "7.1.3",
                "type": "drupal-drush",
                "dist": {
                    "url": "http://ftp.drupal.org/files/projects/phingdrushtask-7.x-1.3.tar.gz",
                    "type": "tar"
                }
            }
        }
    ]
}
